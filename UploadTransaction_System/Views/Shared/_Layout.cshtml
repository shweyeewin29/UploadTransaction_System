<!DOCTYPE html>
<style>
    .navbar-primary {
        background-color: #6777EF !important;
    }
    .navbar-brand {
        color: #e3eaef !important;
    }
    .heading {
        color: #e3eaef !important;
    }
    .navbar-nav > li :hover {
        background-color: #CCCCFF !important;
        color:black !important;
        border-radius:8px;
    }
    .navbar-brand:hover{
        color:black !important;
    }

    .footer {
        right: 0;
        bottom: 0;
        left: 0;
        padding: 1rem;
        background-color: #efefef;
        text-align: center;
    }
    
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-primary navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Upload Transaction Data System", "UploadTransactionFile", "Transaction", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a class="heading" href="~/transaction/uploadtransactionfile">Upload File</a></li>
                    <li><a class="heading" href="~/transaction/transactionlist">Transaction List</a></li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <hr />
        <br />
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
